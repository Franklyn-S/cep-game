<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#002196F3"
    tools:context=".GameScreen">

    <TextView
        android:id="@+id/tvCep"
        android:layout_width="164dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:shadowColor="#2196F3"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/editTextCep"
        android:layout_width="65dp"
        android:layout_height="34dp"
        android:background="#2196F3"
        android:backgroundTint="#2196F3"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="000"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="289dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="350dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentativas:"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/tentativasValue"
        android:layout_width="39dp"
        android:layout_height="33dp"
        android:text="0"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/pontuacaoValue"
        android:layout_width="37dp"
        android:layout_height="24dp"
        android:text="1000"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:id="@+id/statusValue"
        android:layout_width="167dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:text="---"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontuação:"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:id="@+id/cityValue"
        android:layout_width="168dp"
        android:layout_height="37dp"
        android:text="xxxx"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="289dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logradouro"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="232dp" />

    <TextView
        android:id="@+id/logradouroValue"
        android:layout_width="152dp"
        android:layout_height="44dp"
        android:text="xxxx"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="232dp" />

    <Button
        android:id="@+id/btTestCEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testCep"
        android:text="Testar CEP"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="173dp" />

    <TextView
        android:id="@+id/tvCharacter"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="67dp" />
</androidx.constraintlayout.widget.ConstraintLayout>